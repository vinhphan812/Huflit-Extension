{
	"name": "HUFLIT (beta)",
	"description": "HUFLIT (beta)",
	"manifest_version": 3,
	"version": "0.0.1",
	"background": {
		"service_worker": "./background.js"
	},
	"icons": {
		"16": "assets/img/huflit.png",
		"32": "assets/img/huflit.png",
		"48": "assets/img/huflit.png",
		"64": "assets/img/huflit.png",
		"128": "assets/img/huflit.png"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": "./assets/img/huflit.png"
	},
	"permissions": ["tabs", "cookies", "storage"],

	"host_permissions": [
		"https://portal.huflit.edu.vn/*",
		"https://esurvey.huflit.edu.vn/*"
	],
	"commands": {
		"_execute_action": {
			"suggested_key": {
				"default": "Ctrl+Shift+F",
				"mac": "MacCtrl+Shift+F"
			},
			"description": "Opens hello.html"
		}
	}
}
